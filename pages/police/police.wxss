.box{
  width: 80%;
  height: 300rpx;
  margin-top: 50rpx;
  background: #fff;
  border-radius: 10rpx;
  font-size: 30rpx;
  float: left;
  margin-left: 75rpx;
}
.bigbox{
  width: 80%;
  margin: 0 auto;
  margin-top: 30rpx;
}
.see{
  float: right;
  text-align: right;
  color: red;
}
.kong{
  width: 1000%;
  height: 20rpx;
}
.box-bottom{
  margin-top: 50rpx;
  width: 30%;
  height: 30rpx;
}
.round{
  width: 25rpx;
  height: 25rpx;
  border-radius: 50%;
  background: salmon;
  float: left;
  margin-top: 8rpx;
}
.box-bottom-wz{
  margin-left: 10rpx;
  float: left;
}
/* -----------------------------------------------------------------选项卡页面------------------------------------------------- */
.no-box{
  width: 100%;
  height: 100%;
  margin: 10rpx;
}
.no-box-hz{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
}
.no-box-hz-left{
  width: 100rpx;
  height: 100rpx;
  line-height: 55rpx;
  text-align: center;
  font-size: 30rpx;
  border: 1rpx solid #000000;
}
.no-box-hz-center{
  width: 100%;
  height: 100rpx;
  /* background: seagreen; */
  font-size: 30rpx;
  line-height: 100rpx;
  border: 1rpx solid #000000;
}
.top-left{
  width: 100rpx;
  height: 50rpx;
  border-radius: 50rpx /30rpx;
  margin-top: 20rpx;
}
.no-box-hz-right{
  width: 200rpx;
  height: 100%;
  /* background: salmon; */
}
.right-round{
  width: 80rpx;
  height: 80rpx;
  background: skyblue;
  border-radius: 50%;
  font-size: 30rpx;
  line-height: 80rpx;
  text-align: center;
  color: red;
  margin: 10rpx 0 0 30rpx;
}