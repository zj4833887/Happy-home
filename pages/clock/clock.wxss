.box{
  width: 750rpx;
  height: 306rpx;
}
.box>image{
  width: 100%;
  height: 100%;
}
.rule{
  width:110rpx;
height:27rpx;
font-size:28rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(119,119,119,1);
margin:46rpx 0 0 608rpx;
}
.card-box{
  width: 100%;
  height: 30rpx;
  margin-top:40rpx;
  font-size: 32rpx;
  color: #333333;
  font-weight: 800;
}
.card-time{
  width: 224rpx;
  height: 31rpx;
  margin:59rpx 0 0 1rpx;
  color: #666666;
  font-size: 32rpx;
}
.card-round{
  width: 216rpx;
  height: 216rpx;
  background: #FDC78E;
  margin: 0 auto;
  margin-top: 77rpx;
  border-radius: 50%;
  font-size: 34rpx;
  color: #FFFFFF;
  line-height: 216rpx;
}
.closing-time{
  width: 235rpx;
  height: 31rpx;
  margin:99rpx 0 0 1rpx;
  color: #666666;
  font-size: 32rpx;
}
.down{
  background: #939393;
}
.van-cell{
  width: 216rpx;
  height: 216rpx;
  background: #FDC78E;
  margin: 0 auto;
  margin-top: 77rpx;
  border-radius: 100%;
  font-size: 34rpx;
  color: #FFFFFF;
  line-height: 216rpx;
}
/* 弹出框 */
.bx{
  display: none;
}
.box-Popup{
  position: absolute;
  left: 135rpx;
  top: 476rpx;
  width: 486rpx;
  height: 290rpx;
  border-radius: 10%;
  background: #FFFFFF;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  
}
.box-Popup-top{
  width: 100%;
  height: 143rpx;
  border-radius: 10%;
  text-align: center;
  line-height: 143rpx;
  font-size: 30rpx;
  color: #555555;
  
}
.box-Popup-bottom{
  width: 100%;
  height: 126rpx;
  border-radius: 10%;
  background: #FFFFFF;
  border: 1rpx solid #FFFFFF;
}
button::after{
  border: 1px solid rgba(0,0,0,0);
}
.hide{
  display:block;
}
.show{
  display: none;
}