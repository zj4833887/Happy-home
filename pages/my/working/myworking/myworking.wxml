<view class="box">
<van-cell title="工作周期" is-link value="{{arr}}"
url="/pages/my/working/cycle/cycle"
 />
<picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
<van-cell title="工作性质" is-link value="{{array[index]}}" bindtap="onChangeShowState" />
</picker>


 <picker mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">
    <van-cell title="工作时间" is-link value="{{time}}" />
  </picker>
</view>
<view class="btnbox">

<van-button custom-style="border-radius:15rpx" color="#FEB466" size="large" type="warning" bindtap="selectall" bindchange="checkboxChange"
  >保存</van-button>
  </view>

