.box{
  width:690rpx;
  height:306rpx;
  background:rgba(255,255,255,1);
  border-radius:15px;
  margin: 0 auto;
  margin-top: 30rpx;
  
}
.van-cell__title{
  font-size: 28rpx;
  color: #333333;
}
.van-cell__value{
  font-size: 24rpx;
  color: #666666;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
/* 弹框开始 */
.tk-box{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  display: block;
}
.tk{
  position: absolute;
  left: 20rpx;
  bottom: 157rpx;
  width: 710rpx;
  height: 231rpx;
  background:#EBEBEB;
  border-radius:26rpx;
}
.tk-bottom{
  position: absolute;
  left: 20rpx;
  bottom: 31rpx;
  width: 710rpx;
  height: 114rpx;
  background: #FFFFFF;
  border-radius:26rpx;
  font-size: 40rpx;
  color: #0076FF;
  line-height: 114rpx;
  text-align: center;
}
.tk-top{
  width: 100%;
  height: 114rpx;
  background: #EBEBEB;
  border-radius:26rpx;
  font-size: 40rpx;
  color: #666666;
  line-height: 114rpx;
  text-align: center;
}
.tk-top-hx{
  width:710rpx;
  height:3rpx;
  background:rgba(205,206,210,1);
  opacity:0.5;
  z-index: 999;
}
.hide{
  display:block;
}
.show{
  display: none;
}
.btnbox{
  width: 690rpx;
  height: 100rpx;
  margin: 0 auto;
  margin-top: 50rpx;
}
