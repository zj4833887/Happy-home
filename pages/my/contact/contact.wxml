<view class="contact">
  请填写手机号码
</view>
<view class="contact-box">
 <van-field
    value="{{ value }}"
    label="手机号码"
    border="{{ false }}"
    bind:change="onChange"
  />
</view>
<view class="contact">
  请填写现在居住的地址
</view>
<view class="adder">
<picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
    <view class="adder-box">
    <van-cell title="所在地区" is-link value="{{region[0]}}，{{region[1]}}，{{region[2]}}" />
    </view>
</picker>
    <view class="adder-bottom">
    <view class="adder-left">
      <view class="adder-left-wz">
      详细地址
      </view>
    </view>
    <view class="adder-right">
    <input class="adder-right-wz" placeholder="例子：人民大道南5号楼融泽家园4楼家政部南">
    </input>
    </view>
    </view>
</view>
<view class="btn" >
  <button bindtap="selectall" square class="col">提交</button>
</view>
